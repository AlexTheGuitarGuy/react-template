{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "types": [
      "vite/client",
      "node"
    ],
    "skipLibCheck": true,
    "strict": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
        "./dist/*",
        ""
      ],
      "components/*": [
        "./src/components/*"
      ],
      "hooks/*": [
        "./src/hooks/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "config/*": [
        "./src/config/*"
      ],
      "pages/*": [
        "src/components/pages/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "public/*": [
        "./public/*"
      ],
      "styles/*": [
        "./src/styles/*"
      ],
      "store/*": [
        "./src/store/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "shadcn/*": [
        "./src/shadcn/components/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "mocks/*": [
        "./src/mocks/*"
      ]
    }
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
