  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "tests",
    "./src",
    "*.ts",
    "*.tsx",
    ".eslintrc.cjs",
    "tailwind.config.cjs",
    "postcss.config.js"
  ]
}
